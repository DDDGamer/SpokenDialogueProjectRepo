<grammar version="1.0" xml:lang="en-US" root="Commands"
         xmlns="http://www.w3.org/2001/06/grammar">
  <rule id="Commands" scope="public">
    <one-of>
      <item><ruleref uri="#QuitCommands"/></item>
      <item><ruleref uri="#MoveCommands"/></item>  
    </one-of>  
  </rule>
  
  <rule id="MoveCommands" scope="public">
    <ruleref uri="#Action" />
    <ruleref uri="#ChessPiece"/>
    <item> to </item>
    <ruleref uri="#HorizontalPosition"/>
    <ruleref uri="#VerticalPosition"/>  
  </rule>

  <rule id="Action" scope="public">
    <one-of>
      <item> move </item>
      <item> make </item>
      <item> take </item>
    </one-of>
  </rule>

  <rule id="ChessPiece" scope="public">
    <one-of>
      <item> king </item>
      <item> pawn </item>
      <item> knight </item>
    </one-of>
  </rule>

  <rule id="HorizontalPosition" scope="public">
    <one-of>
      <item> A </item>
      <item> B </item>
      <item> C </item>
      <item> D </item>
      <item> E </item>
      <item> F </item>
      <item> G </item>
      <item> H </item>
    </one-of>
  </rule>

  <rule id="VerticalPosition" scope="public">
    <one-of>
      <item> one </item>
      <item> two </item>
      <item> three </item>
      <item> four </item>
      <item> five </item>
      <item> six </item>
      <item> seven </item>
      <item> eight </item>
    </one-of>
  </rule>

  <rule id="QuitCommands" scope="public">
    <one-of>
      <item> quit </item>
      <item> end </item>
      <item> exit </item>
    </one-of>
  </rule>
</grammar>
  
